<div class="text-center">
  <p id="postId" hidden>{{id}}</p>
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p> {{test}}</p>
  {{#if Comments}}
  {{#each Comments as |comment| }}
    <p>{{comment.body}}</p>
  {{/each}}
  {{/if}}
  {{#each Comment as |comment| }}
    <p>t {{comment.body}}</p>
  {{/each}}
  {{#if logged_in}}
  <form class="form new-post-form">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <input class="form-input" type="text" id="comment" name="comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
   {{/if}}
</div>

<script src="/js/comment.js"></script>
