<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}

<div class="card">
  <div class="card-header">
    <h2>
      <a href="/post/{{post.id}}" style="color:white">{{post.name}}</a>
    </h2>
    <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <p style=" padding: 10px">
      {{post.description}}
    </p>
</div>
{{/each}}

